<Window x:Class="FusionEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FusionEditor"
        xmlns:FusionEditor="clr-namespace:FusionEditor"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1024">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <FusionEditor:CharacterView Width="800" Height="600" x:Name="characterView" Margin="108,85" />
        <Slider x:Name="slider" HorizontalAlignment="Left" Margin="845,10,0,0" VerticalAlignment="Top" Width="152" ValueChanged="slider_ValueChanged" TickFrequency="0.2" TickPlacement="BottomRight"/>
    </Grid>
</Window>
